<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArtbavialFinance.MainPage">

    <StackLayout Padding="20">
        <Label Text="Welcome to Artbavial Finance" FontSize="32" HorizontalOptions="Center" />

        <!-- Отображение информации о текущем пользователе -->
        <Label x:Name="UserInfoLabel" FontSize="24" HorizontalOptions="Center" />

        <Button Text="Logout" Clicked="OnLogoutClicked" />
    </StackLayout>

</ContentPage>
